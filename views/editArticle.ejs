<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Editar articulo</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="css/styles.css" />
  </head>
  <body>
    <%- include("./partials/navbar.ejs") %>
    <div class="container mt-5">
      <h1>Edit article 1</h1>
      <form action="/articulos/<%= article.id %>/update?_method=patch" method="POST">
        <!-- <input type="hidden" name="_method" value="PATCH" /> -->
        <div class="mb-3">
          <label for="" class="form-label">Title</label>
          <input
            type="text"
            class="form-control"
            value="<%=article.title%>"
            id="titulo"
            name="newTitle"
          />
        </div>
        <div class="mb-3">
          <label for="" class="form-label">Content</label>
          <input
            type="text"
            class="form-control"
            value="<%=article.content%>"
            id="contenido"
            name="newContent"
          />
        </div>
        <div class="mb-3">
          <label for="" class="form-label">Image</label>
          <input class="form-control" type="file" id="formFile" />
        </div>
        <div>
          <label for="" class="form-label">Select author</label>
          <select class="form-select mb-3" aria-label="Default select example" name="newId">
            <option selected>Select...</option>

            <% for(const user of users) { %>
            <option value="<%= user.id %>"><%= user.firstname %> <%=user.lastname %></option>
            <% } %>
          </select>
        </div>
        <div class="d-grid gap-2">
          <a href="/admin">
            <button type="submit" class="btn btn-primary">Edit</button>
          </a>
        </div>
      </form>
    </div>
    <%- include("./partials/footer.ejs") %>
  </body>
</html>
